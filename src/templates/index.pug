include includes/mixins

doctype html
html(lang='en')
    head
        - const author = "Jinu Kurian"
        - const metaTitle = "Jinu Kurian | Senior UI Developer"
        - const metaDesc = "Creative UI Developer based in Kochi with 7 years of solid experience in UI development. Skilled in HTML5,CSS3, SASS, jQuery, GSAP animations, Barba.js, Page speed optimisations, HTML Emails templates and more."
        
        title #{metaTitle}
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
        meta(name="Description" content= metaDesc)
        meta(name="keywords" content='')
        link(rel="canonical" href='')

        //- Social Media Tags
        meta(property='og:locale' content='en_US')
        meta(property='og:type' content='website')
        meta(property='og:title' content= metaTitle)
        meta(name='author' content='Jinu Kuria ')
        meta(property='og:url' content='index.html')
        meta(property='og:image' name='image' content='images/meta.jpg')
        meta(property='og:image:secure_url' content='images/meta.jpg')
        meta(property='og:image:type' content='image/jpeg')
        meta(property='og:image:width' content='300')
        meta(property='og:image:height' content='300')
        meta(property='og:site_name' content='Jinu Kurian')
        meta(property='og:description' content= metaDesc)
        meta(name='twitter:card' content='summary')

        //- favicon
        link(rel='apple-touch-icon' sizes='180x180' href='images/icons/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='images/icons/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='images/icons/favicon-16x16.png')
        link(rel='manifest' href='images/icons/site.webmanifest')
        link(rel='mask-icon' href='images/icons/safari-pinned-tab.svg' color='#5bbad5')
        meta(name='msapplication-TileColor' content='#00aba9')
        meta(name='theme-color' content='#ffffff')

